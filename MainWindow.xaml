<?xml version="1.0" encoding="utf-8"?>
<Window
       x:Class="WinUIMetadataScraper.MainWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:local="using:WinUIMetadataScraper"
       Title="Exe Metadata Scraper for Defkey">

    <Grid x:Name="RootGrid"
          Background="{ThemeResource SolidBackgroundFillColorBaseBrush}"
          RequestedTheme="Light">

        <Grid.Resources>
            <!-- Accent / Visual Identity -->
            <SolidColorBrush x:Key="AccentBrush" Color="#C62828"/>
            <SolidColorBrush x:Key="DropZoneBorderBrush" Color="#9E9E9E"/>
            <SolidColorBrush x:Key="DropZoneBackgroundBrush" Color="#FFFDFDFD"/>
            <SolidColorBrush x:Key="DropZoneDragOverBackgroundBrush" Color="#FFE3F2FD"/>
            <SolidColorBrush x:Key="DropZoneHighlightBorderBrush" Color="#FF1976D2"/>

            <!-- Use MinHeight so Compact density can reduce where possible -->
            <Style x:Key="TopBarPrimaryButton" TargetType="Button" BasedOn="{StaticResource AccentButtonStyle}">
                <Setter Property="MinWidth" Value="160"/>
                <Setter Property="MinHeight" Value="40"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="Padding" Value="16,8"/>
            </Style>

            <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
                <Setter Property="CornerRadius" Value="6"/>
                <Setter Property="MinWidth" Value="90"/>
                <Setter Property="MinHeight" Value="34"/>
                <Setter Property="Padding" Value="12,6"/>
            </Style>

    <Thickness x:Key="SpaceXs">4</Thickness>
    <Thickness x:Key="SpaceSm">8</Thickness>
    <Thickness x:Key="SpaceMd">12</Thickness>

    <Style x:Key="CardBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorSecondaryBrush}" />
        <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="12" />
    </Style>

    <Style x:Key="MetaLabel" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorSecondaryBrush}" />
        <Setter Property="Margin" Value="0,0,0,2" />
    </Style>
    <Style x:Key="MetaValue" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}" />
        <Setter Property="TextTrimming" Value="CharacterEllipsis" />
    </Style>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Bar -->
        <Grid Grid.Row="0" Margin="14,4,14,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Homepage link pinned to the left -->
            <HyperlinkButton Grid.Column="0"
                 Content="Homepage"
                 NavigateUri="https://github.com/zeynelozturk/ExeMetadataScraper"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Left"
                 ToolTipService.ToolTip="Open GitHub page for this tool"
                 Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                 FontSize="12"
                 Opacity="0.82"
                 Padding="0"/>

            <!-- Auth actions pinned to the right -->
            <StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Spacing="10">
                <Button x:Name="LoginButton"
                        Click="LoginButton_Click"
                        Style="{StaticResource TopBarPrimaryButton}"
                        AutomationProperties.Name="Login Button">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE77B;"/>
                        <TextBlock Text="Login"/>
                    </StackPanel>
                </Button>
                <TextBlock x:Name="AuthStatusTextBlock"
                           Text="Not authenticated"
                           FontWeight="Bold"
                           Foreground="Gray"
                           VerticalAlignment="Center"/>
                <Button x:Name="LogoutButton"
                        Content="Logout"
                        Width="100"
                        MinHeight="40"
                        Visibility="Collapsed"
                        Click="LogoutButton_Click"
                        AutomationProperties.Name="Logout Button"/>
            </StackPanel>
        </Grid>

        <!-- InfoBar (future non-modal messaging; keep collapsed initially) -->
        <InfoBar x:Name="StatusInfoBar"
                 Grid.Row="1"
                 IsOpen="False"
                 Margin="20,8,20,4"
                 Severity="Informational"
                 Title="Status"
                 Message=""/>

        <!-- Main area with anchored command bar -->
        <Grid Grid.Row="2" Margin="16,8,16,12">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Scrollable content -->
            <ScrollViewer Grid.Row="0" HorizontalScrollBarVisibility="Disabled">
                <StackPanel Spacing="16" MaxWidth="920">
                    <!-- Selected file header (icon + name + path) -->
                    <Border Style="{StaticResource CardBorderStyle}" Padding="10" x:Name="SelectedHeader" Visibility="Collapsed">
                        <StackPanel Spacing="8">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <Border Width="56" Height="56" CornerRadius="8" Background="#22000000">
                                    <Image x:Name="FileIconImage" Stretch="Uniform"/>
                                </Border>
                                <StackPanel VerticalAlignment="Center" Spacing="4" Width="680">
                                    <TextBlock x:Name="FileNameTextBlock" FontSize="18" FontWeight="Bold" Text="" />
                                    <TextBlock x:Name="FilePathValueTextBlock" Style="{StaticResource MetaValue}" TextWrapping="WrapWholeWords" IsTextSelectionEnabled="True"/>
                                    <HyperlinkButton Content="Open File Location" Padding="0" Click="OpenFolderHyperlink_Click" />
                                </StackPanel>
                            </StackPanel>
                            <!-- Inline metadata preview (collapsed until item selected) -->
                            <Grid x:Name="MetadataGrid" ColumnSpacing="16" RowSpacing="6" />
                            <Button Content="Copy All" HorizontalAlignment="Right" Click="CopyAll_Click" MinWidth="90"/>
                        </StackPanel>
                    </Border>

                    <!-- Drop zone (now also acts as browse surface) -->
                    <Border x:Name="DropZone" MinHeight="110" Style="{StaticResource CardBorderStyle}" AllowDrop="True" Drop="OnFileDrop" DragOver="OnDragOver" DragLeave="DropZone_DragLeave" Tapped="DropZone_Tapped" AutomationProperties.Name="Drop executable files or tap to browse">
                        <Grid>
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="4">
                                <FontIcon Glyph="&#xE898;" FontSize="22" Foreground="{StaticResource AccentBrush}"/>
                                <TextBlock Text="Drop .exe or click to browse" FontSize="13" />
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Files header -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Files" FontWeight="SemiBold" VerticalAlignment="Center" />
                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="8,0,0,0">
                            <InfoBadge Value="{x:Bind Pending.Count, Mode=OneWay}" Style="{StaticResource InformationalIconInfoBadgeStyle}" />
                        </StackPanel>
                        <Button Grid.Column="2" Margin="12,0,0,0" Content="Clear" Click="ClearAllButton_Click" IsEnabled="{x:Bind HasPending, Mode=OneWay}" MinWidth="58"/>
                    </Grid>

                    <!-- File list with icons -->
                    <ListView x:Name="SelectedFilesList" ItemsSource="{x:Bind Pending}" IsItemClickEnabled="True" ItemClick="SelectedFilesList_ItemClick" DoubleTapped="SelectedFilesList_DoubleTapped" SelectionMode="None" MaxHeight="420">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="local:PendingItem">
                                <Grid ColumnSpacing="10" Padding="6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="32"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Image Grid.Column="0" Width="28" Height="28" Stretch="Uniform" Source="{x:Bind IconSource}" />
                                    <StackPanel Grid.Column="1" Spacing="2">
                                        <TextBlock Text="{x:Bind FileName}" FontSize="13" FontWeight="SemiBold" />
                                        <TextBlock Text="{x:Bind FilePath}" FontSize="11" Foreground="{ThemeResource TextFillColorSecondaryBrush}" TextTrimming="CharacterEllipsis" ToolTipService.ToolTip="{x:Bind FilePath}"/>
                                    </StackPanel>
                                    <Button Grid.Column="2" Content="✕" Style="{StaticResource SecondaryButtonStyle}" Padding="6,0" MinWidth="28" Tag="{x:Bind FilePath}" Click="RemovePending_Click"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </ScrollViewer>

            <!-- Bottom command bar -->
            <Grid Grid.Row="1" Margin="0,12,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="StatusText" Grid.Column="0" Text="" VerticalAlignment="Center" Opacity="0.75" Margin="4,0"/>
                <Button Grid.Column="1" x:Name="SendButton" Content="Send" MinHeight="44" Click="SendButton_Click" IsEnabled="False" Style="{StaticResource TopBarPrimaryButton}"/>
            </Grid>
        </Grid>

        <Grid x:Name="BusyOverlay" Visibility="Collapsed" Background="#40FFFFFF">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="12">
                <ProgressRing IsActive="True" Width="48" Height="48"/>
                <TextBlock Text="Uploading..." FontWeight="SemiBold"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>

