<?xml version="1.0" encoding="utf-8"?>
<Window
       x:Class="WinUIMetadataScraper.MainWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:local="using:WinUIMetadataScraper"
       Title="Exe Metadata Scraper for Defkey">

    <Grid x:Name="RootGrid"
          Background="{ThemeResource SolidBackgroundFillColorBaseBrush}"
          RequestedTheme="Light">

        <Grid.Resources>
            <!-- Accent / Visual Identity -->
            <SolidColorBrush x:Key="AccentBrush" Color="#C62828"/>
            <SolidColorBrush x:Key="DropZoneBorderBrush" Color="#9E9E9E"/>
            <SolidColorBrush x:Key="DropZoneBackgroundBrush" Color="#FFFDFDFD"/>
            <SolidColorBrush x:Key="DropZoneDragOverBackgroundBrush" Color="#FFE3F2FD"/>
            <SolidColorBrush x:Key="DropZoneHighlightBorderBrush" Color="#FF1976D2"/>

            <!-- Use MinHeight so Compact density can reduce where possible -->
            <Style x:Key="TopBarPrimaryButton" TargetType="Button" BasedOn="{StaticResource AccentButtonStyle}">
                <Setter Property="MinWidth" Value="160"/>
                <Setter Property="MinHeight" Value="40"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="Padding" Value="16,8"/>
            </Style>

            <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
                <Setter Property="CornerRadius" Value="6"/>
                <Setter Property="MinWidth" Value="90"/>
                <Setter Property="MinHeight" Value="34"/>
                <Setter Property="Padding" Value="12,6"/>
            </Style>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Bar -->
        <Grid Grid.Row="0" Margin="14,4,14,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Homepage link pinned to the left -->
            <HyperlinkButton Grid.Column="0"
                 Content="Homepage"
                 NavigateUri="https://github.com/zeynelozturk/ExeMetadataScraper"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Left"
                 ToolTipService.ToolTip="Open GitHub page for this tool"
                 Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                 FontSize="12"
                 Opacity="0.82"
                 Padding="0"/>

            <!-- Auth actions pinned to the right -->
            <StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Spacing="10">
                <Button x:Name="LoginButton"
                        Click="LoginButton_Click"
                        Style="{StaticResource TopBarPrimaryButton}"
                        AutomationProperties.Name="Login Button">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE77B;"/>
                        <TextBlock Text="Login"/>
                    </StackPanel>
                </Button>
                <TextBlock x:Name="AuthStatusTextBlock"
                           Text="Not authenticated"
                           FontWeight="Bold"
                           Foreground="Gray"
                           VerticalAlignment="Center"/>
                <Button x:Name="LogoutButton"
                        Content="Logout"
                        Width="100"
                        MinHeight="40"
                        Visibility="Collapsed"
                        Click="LogoutButton_Click"
                        AutomationProperties.Name="Logout Button"/>
            </StackPanel>
        </Grid>

        <!-- InfoBar (future non-modal messaging; keep collapsed initially) -->
        <InfoBar x:Name="StatusInfoBar"
                 Grid.Row="1"
                 IsOpen="False"
                 Margin="20,8,20,4"
                 Severity="Informational"
                 Title="Status"
                 Message=""/>

        <!-- Main Scrollable Content -->
        <ScrollViewer Grid.Row="2"
                      HorizontalScrollBarVisibility="Disabled">
            <StackPanel HorizontalAlignment="Center"
                        MaxWidth="640"
                        Spacing="28"
                        Margin="0,8,0,16">

                <!-- Drop Zone -->
                <Border x:Name="DropZone"
                        HorizontalAlignment="Stretch"
                        MinHeight="170"
                        MaxHeight="220"
                        CornerRadius="10"
                        Background="{StaticResource DropZoneBackgroundBrush}"
                        BorderBrush="{StaticResource DropZoneBorderBrush}"
                        BorderThickness="2"
                        AllowDrop="True"
                        Drop="OnFileDrop"
                        DragOver="OnDragOver"
                        DragLeave="DropZone_DragLeave"
                        Tapped="DropZone_Tapped"
                        KeyDown="DropZone_KeyDown"
                        ToolTipService.ToolTip="Drag an .exe (or click) to select a file">
                    <Grid>
                        <StackPanel HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Spacing="12">
                            <FontIcon Glyph="&#xE898;" FontSize="28" Foreground="{StaticResource AccentBrush}"/>
                            <TextBlock Text="Drag &amp; drop an .exe file here"
                                       FontSize="15"
                                       Foreground="#444"/>
                            <TextBlock Text="or click to Browse"
                                       Foreground="#666"
                                       FontStyle="Italic"
                                       FontSize="12"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Tip directly under the drop area (link removed here) -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Spacing="6"
                            Margin="0,6,0,0">
                    <TextBlock Text="Tip: You can also drop a shortcut (.lnk) to resolve the target."
                               FontSize="12"
                               Foreground="#666"/>
                </StackPanel>

                <Button Content="Browse"
                        Click="BrowseButton_Click"
                        Style="{StaticResource SecondaryButtonStyle}"
                        HorizontalAlignment="Center"
                        AutomationProperties.Name="Browse Executable Button"/>


                <!-- Selected Files Panel -->
                <StackPanel Margin="0,12,0,0">
                    <TextBlock Text="Selected executables" FontWeight="SemiBold" />
                    <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,4,0,4">
                        <Button x:Name="ClearAllButton"
                                Content="Clear All"
                                Click="ClearAllButton_Click"
                                IsEnabled="{x:Bind HasPending, Mode=OneWay}"/>
                        <TextBlock Text="{x:Bind FormatItemCount(Pending.Count), Mode=OneWay}"
                   VerticalAlignment="Center"
                   Foreground="#555"/>
                    </StackPanel>

                    <ListView x:Name="SelectedFilesList"
              ItemsSource="{x:Bind Pending}"
              IsItemClickEnabled="True"
              ItemClick="SelectedFilesList_ItemClick"
              SelectionMode="None"
              BorderThickness="1"
              BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
              MaxHeight="220"
              HorizontalAlignment="Stretch"
              ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListView.ItemTemplate>
    <DataTemplate x:DataType="local:PendingItem">
        <Grid Padding="4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="{x:Bind FileName}" 
                               Grid.Column="0"
                               TextTrimming="CharacterEllipsis"/>

                                    <TextBlock Text="{x:Bind FilePath}" 
                               Grid.Column="1"
                               Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                               TextTrimming="CharacterEllipsis"
                               ToolTipService.ToolTip="{x:Bind FilePath}"/>

                                    <Button Grid.Column="2"
                            Content="X"
                            ToolTipService.ToolTip="Remove"
                            Tag="{x:Bind FilePath}"
                            Margin="8,0,0,0"
                            Click="RemovePending_Click"
                            VerticalAlignment="Center"
                            MinWidth="28"/>
                                </Grid>
    </DataTemplate>
</ListView.ItemTemplate>
                    </ListView>
                </StackPanel>


                <!-- File Header -->
                <StackPanel Orientation="Horizontal" Spacing="14">
                    <Border Width="56" Height="56" CornerRadius="8" Background="#22000000">
                        <Image x:Name="FileIconImage"
                               Stretch="Uniform"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock x:Name="FileNameTextBlock"
                               Text=""
                               FontSize="22"
                               FontWeight="Bold"
                               IsTextSelectionEnabled="True"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- File Path -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="File Path:"
                               FontWeight="Bold"
                               Margin="0,0,6,0"
                               VerticalAlignment="Top"/>
                    <TextBlock x:Name="FilePathValueTextBlock"
                               Grid.Column="1"
                               IsTextSelectionEnabled="True"
                               TextWrapping="Wrap"
                               VerticalAlignment="Top"
                               Foreground="#222"/>
                    <TextBlock Grid.Column="2" Margin="10,0,0,0" VerticalAlignment="Top">
                        <Hyperlink Click="OpenFolderHyperlink_Click">
                            <Run Text="(Open file location)"/>
                        </Hyperlink>
                    </TextBlock>
                </Grid>

                <!-- Metadata Card -->
                <StackPanel Spacing="10">
                    <Border BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                            Padding="16,14,16,12">
                        <ScrollViewer VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Disabled"
                                      MaxHeight="260">
                            <TextBlock x:Name="FileMetadataTextBlock"
                                       FontFamily="Consolas"
                                       FontSize="13"
                                       Text="File information will appear here."
                                       TextWrapping="Wrap"
                                       IsTextSelectionEnabled="True"/>
                        </ScrollViewer>
                    </Border>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Button Content="Copy All"
                                Grid.Column="1"
                                Click="CopyAll_Click"
                                Style="{StaticResource SecondaryButtonStyle}"
                                AutomationProperties.Name="Copy All Metadata Button"/>
                    </Grid>
                </StackPanel>

                <!-- Send -->
                <StackPanel HorizontalAlignment="Center" Spacing="8" Margin="0,4,0,0">
                    <TextBlock x:Name="DraftsNoteText"
                               Text="Note: When you click Send, the .exe metadata entry will be added to your Drafts."
                               TextWrapping="Wrap"
                               Foreground="#666"
                               FontSize="12"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,4"/>
                    <Button x:Name="SendButton"
                            Content="Send .exe metadata"
                            MinWidth="180"
                            MinHeight="48"
                            HorizontalAlignment="Center"
                            Click="SendButton_Click"
                            IsEnabled="False"
                            AutomationProperties.Name="Send Metadata Button"/>
                    <TextBlock x:Name="SendStatusText"
                               Foreground="Gray"
                               Text="Login and select a file to enable"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- removed old bottom tip -->
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>

