<?xml version="1.0" encoding="utf-8"?>
<Window
       x:Class="WinUIMetadataScraper.MainWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:local="using:WinUIMetadataScraper"
       Title="Exe Metadata Scraper for Defkey">

    <Grid x:Name="RootGrid"
          Background="{ThemeResource SolidBackgroundFillColorBaseBrush}"
          RequestedTheme="Light">

        <Grid.Resources>
            <!-- Accent / Visual Identity -->
            <SolidColorBrush x:Key="AccentBrush" Color="#C62828"/>
            <SolidColorBrush x:Key="DropZoneBorderBrush" Color="#9E9E9E"/>
            <SolidColorBrush x:Key="DropZoneBackgroundBrush" Color="#FFFDFDFD"/>
            <SolidColorBrush x:Key="DropZoneDragOverBackgroundBrush" Color="#FFE3F2FD"/>
            <SolidColorBrush x:Key="DropZoneHighlightBorderBrush" Color="#FF1976D2"/>

            <!-- Use MinHeight so Compact density can reduce where possible -->
            <Style x:Key="TopBarPrimaryButton" TargetType="Button" BasedOn="{StaticResource AccentButtonStyle}">
                <Setter Property="MinWidth" Value="160"/>
                <Setter Property="MinHeight" Value="40"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="Padding" Value="16,8"/>
            </Style>

            <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
                <Setter Property="CornerRadius" Value="6"/>
                <Setter Property="MinWidth" Value="90"/>
                <Setter Property="MinHeight" Value="34"/>
                <Setter Property="Padding" Value="12,6"/>
            </Style>

    <Thickness x:Key="SpaceXs">4</Thickness>
    <Thickness x:Key="SpaceSm">8</Thickness>
    <Thickness x:Key="SpaceMd">12</Thickness>

    <Style x:Key="CardBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorSecondaryBrush}" />
        <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="12" />
    </Style>

    <Style x:Key="MetaLabel" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorSecondaryBrush}" />
        <Setter Property="Margin" Value="0,0,0,2" />
    </Style>
    <Style x:Key="MetaValue" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}" />
        <Setter Property="TextTrimming" Value="CharacterEllipsis" />
    </Style>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Bar -->
        <Grid Grid.Row="0" Margin="14,4,14,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Homepage link pinned to the left -->
            <HyperlinkButton Grid.Column="0"
                 Content="Homepage"
                 NavigateUri="https://github.com/zeynelozturk/ExeMetadataScraper"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Left"
                 ToolTipService.ToolTip="Open GitHub page for this tool"
                 Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                 FontSize="12"
                 Opacity="0.82"
                 Padding="0"/>

            <!-- Auth actions pinned to the right -->
            <StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Spacing="10">
                <Button x:Name="LoginButton"
                        Click="LoginButton_Click"
                        Style="{StaticResource TopBarPrimaryButton}"
                        AutomationProperties.Name="Login Button">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE77B;"/>
                        <TextBlock Text="Login"/>
                    </StackPanel>
                </Button>
                <TextBlock x:Name="AuthStatusTextBlock"
                           Text="Not authenticated"
                           FontWeight="Bold"
                           Foreground="Gray"
                           VerticalAlignment="Center"/>
                <Button x:Name="LogoutButton"
                        Content="Logout"
                        Width="100"
                        MinHeight="40"
                        Visibility="Collapsed"
                        Click="LogoutButton_Click"
                        AutomationProperties.Name="Logout Button"/>
            </StackPanel>
        </Grid>

        <!-- InfoBar (future non-modal messaging; keep collapsed initially) -->
        <InfoBar x:Name="StatusInfoBar"
                 Grid.Row="1"
                 IsOpen="False"
                 Margin="20,8,20,4"
                 Severity="Informational"
                 Title="Status"
                 Message=""/>

        <!-- Main Scrollable Content -->
        <Grid Grid.Row="2" Margin="16,8,16,12">
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="430"/>
        <ColumnDefinition Width="16"/> <!-- gutter -->
        <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>

    <!-- LEFT: Intake + List -->
    <StackPanel Grid.Column="0" Spacing="12">
        <!-- Drop Zone (reduced visual dominance) -->
        <Border x:Name="DropZone"
                MinHeight="110"
                Style="{StaticResource CardBorderStyle}"
                AllowDrop="True"
                Drop="OnFileDrop"
                DragOver="OnDragOver"
                DragLeave="DropZone_DragLeave"
                Tapped="DropZone_Tapped"
                AutomationProperties.Name="Executable drop area and browse button">
            <Grid>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="4">
                    <FontIcon Glyph="&#xE898;" FontSize="22" Foreground="{StaticResource AccentBrush}"/>
                    <TextBlock Text="Drop .exe or Browse" FontSize="13" />
                </StackPanel>
                <Button Content="Browse"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Margin="0,0,4,4"
                        Click="BrowseButton_Click"
                        MinWidth="80"
                        MinHeight="30"
                        Style="{StaticResource SecondaryButtonStyle}"/>
            </Grid>
        </Border>

        <!-- Header row with badge -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Files" FontWeight="SemiBold" VerticalAlignment="Center" />
            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="8,0,0,0">
                        <InfoBadge Value="{x:Bind Pending.Count, Mode=OneWay}"
           Style="{StaticResource InformationalIconInfoBadgeStyle}" />
                    </StackPanel>
            <Button Grid.Column="2"
                    Margin="12,0,0,0"
                    Content="Clear"
                    Click="ClearAllButton_Click"
                    IsEnabled="{x:Bind HasPending, Mode=OneWay}"
                    MinWidth="58"/>
        </Grid>

        <!-- File list -->
        <ListView x:Name="SelectedFilesList"
                  ItemsSource="{x:Bind Pending}"
                  IsItemClickEnabled="True"
                  ItemClick="SelectedFilesList_ItemClick"
                  SelectionMode="None"
                  MaxHeight="180">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="local:PendingItem">
                    <Grid ColumnSpacing="6" Padding="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="24"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <FontIcon Glyph="&#xE7C3;" FontSize="16" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <StackPanel Grid.Column="1" Spacing="2">
                            <TextBlock Text="{x:Bind FileName}" FontSize="12" FontWeight="SemiBold" />
                            <TextBlock Text="{x:Bind FilePath}"
                                       FontSize="11"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       TextTrimming="CharacterEllipsis"
                                       ToolTipService.ToolTip="{x:Bind FilePath}"/>
                        </StackPanel>
                        <Button Grid.Column="2"
                                Content="âœ•"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Padding="4,0"
                                MinWidth="28"
                                Tag="{x:Bind FilePath}"
                                Click="RemovePending_Click"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Primary action -->
        <Button x:Name="SendButton"
                Content="Send"
                MinHeight="44"
                Click="SendButton_Click"
                IsEnabled="False"
                Style="{StaticResource TopBarPrimaryButton}"/>
    </StackPanel>

    <!-- RIGHT: Details -->
    <StackPanel Grid.Column="2" Spacing="12">
        <!-- File header card -->
        <Border Style="{StaticResource CardBorderStyle}">
            <Grid ColumnSpacing="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="56"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border Width="56" Height="56" CornerRadius="8" Background="#22000000">
                    <Image x:Name="FileIconImage" Stretch="Uniform"/>
                </Border>
                <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="4">
                    <TextBlock x:Name="FileNameTextBlock" FontSize="18" FontWeight="Bold" Text="" />
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE71B;" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <TextBlock Text="Path:" Style="{StaticResource MetaLabel}" Margin="0,0,2,0"/>
                        <TextBlock x:Name="FilePathValueTextBlock"
                                   Style="{StaticResource MetaValue}"
                                   Width="320"
                                   TextWrapping="Wrap"
                                   IsTextSelectionEnabled="True"/>
                        <HyperlinkButton Content="Open"
                                         Padding="4,0"
                                         Click="OpenFolderHyperlink_Click"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Metadata card -->
        <Border Style="{StaticResource CardBorderStyle}">
            <Grid x:Name="MetadataGrid" ColumnSpacing="16" RowSpacing="6">
                <!-- Populated dynamically or keep fallback -->
                <TextBlock x:Name="FileMetadataTextBlock"
                           FontFamily="Consolas"
                           FontSize="12"
                           Text="File information will appear here."
                           TextWrapping="Wrap"
                           IsTextSelectionEnabled="True"/>
            </Grid>
        </Border>

        <!-- Secondary actions -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
            <Button Content="Copy All" Click="CopyAll_Click" MinWidth="90"/>
        </StackPanel>
    </StackPanel>
</Grid>

        <!-- Busy overlay should span all rows and be above other content -->
        <Grid x:Name="BusyOverlay"
              Grid.Row="0"
              Grid.RowSpan="3"
              Visibility="Collapsed"
              Canvas.ZIndex="100"
              IsHitTestVisible="True"
              Background="#40FFFFFF">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Spacing="12">
                <ProgressRing IsActive="True" Width="48" Height="48"/>
                <TextBlock Text="Uploading..." FontWeight="SemiBold"/>
            </StackPanel>
        </Grid>
    </Grid>

</Window>

